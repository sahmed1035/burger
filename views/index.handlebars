<h1>Eat-Da-Burger!!</h1>

<h2>Burgers that are NOT devoured!</h2>

{{!-- printing each burgers in the burgers table. --}}
<ul>
    {{#each burgers}}
    {{#unless this.burger}}
    <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">DEVOURE IT!</button>
        </form>
        {{!-- partial. now create it under views/partials/burgers/delete.handlebars --}}
        {{!-- {{> burgers/delete-burger}} --}}
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are NOT devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">NOT DEVOURED!</button>
        </form>

    </li>
    {{/if}}
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured!
    </div>

    <button type="submit">Add Burger</button>
</form>