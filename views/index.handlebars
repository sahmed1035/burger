<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <img src="../public/assets/img/burger1.jpg" id="burger-photo" style="width:360px;height:300px;" alt="burger">

                <h2>
                    Eat-Da-Burger!!
                </h2>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <h3>
                Burgers that are NOT devoured!
            </h3>
            <p>
                {{!-- printing each burgers in the burgers table. --}}
                <ul>
                    {{#each burgers}}
                    {{#unless this.burger}}
                    <li>
                        {{this.burger_name}}

                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            <button class="btn" type="submit">DEVOURE IT!</button>
                        </form>
                        {{!-- partial. now create it under views/partials/burgers/delete.handlebars --}}
                        {{!-- {{> burgers/delete-burger}} --}}
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </p>

        </div>


        <div class="col-md-4">
            <h3>
                Add a Burger
            </h3>
            <p>
                <form class="create-update-form" action="burgers/create" method="POST">

                    <div class="form-group">
                        <label for="bu">Burger Name:</label>
                        <input type="text" id="bu" name="burger_name">
                    </div>
                    <p>
                        <button class="btn" type="submit">ADD BURGER</button>
                    </p>

                </form>
            </p>
        </div>



        <div class="col-md-4">
            <h3>
                Burgers that are devoured!
            </h3>
            <p>
                {{!-- <ul>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}

                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">

                        </form>

                    </li>
                    {{/if}}
                    {{/each}}
                </ul> --}}

                <li>
                    {{name}}

                    <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
                        {{#if devoured}}devoured!{{else}}devoure it!{{/if}}
                    </button>

                    <button class="delete-burger" data-id="{{this.id}}">devoure it!</button>
                </li>

            </p>

        </div>
    </div>
</div>







